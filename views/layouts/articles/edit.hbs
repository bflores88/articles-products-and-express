<section class="errorHandling">
  <h2>{{errorTitle}}</h2>
  <p>{{errorBody}}</p>
</section>

<form action="/articles/{{title}}?_method=PUT" method="post" role="form" enctype="application/x-www-form-urlencoded">
  <h2>Edit Article Form</h2>

  <h2>Current Title: &nbsp;{{title}}</h2>

  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" name="title" placeholder="{{title}}" value="{{title}}">
  </div>

  <div class="form-group">
    <label for="author">Author</label>
    <input type="text" class="form-control" name="author" placeholder="{{author}}" value="{{author}}">
  </div>

  <div class="form-group">
    <label for="body">Body</label>
    <input type="text" class="form-control" name="body" placeholder="{{body}}" value="{{body}}">
  </div>

  <button type="submit" class="btn-submit" value="OK">Submit</button>

</form>

<br>
<br>

<form action="/articles/{{title}}?_method=DELETE" method="post" role="form" enctype="application/x-www-form-urlencoded">
  <div>Delete Article?</div>
  <button type="submit" class="btn-submit" value="OK">Delete</button>
</form>
