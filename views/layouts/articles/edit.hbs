<div class="form-content">

  <section class="new-error-handler">
    <div>
      <h3 class="errorTitle">{{errorTitle}}</h3>
      <p class="errorBody">{{errorBody}}</p>
    </div>
  </section>

  <section class="input-form">

    <form action="/articles/{{urlTitle}}?_method=PUT" method="post" role="form"
      enctype="application/x-www-form-urlencoded">
      <h2>Edit Article Form</h2>

      <h4>Current Title: &nbsp;{{title}}</h4>

      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" name="title" value="{{title}}">
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        <input type="text" class="form-control" name="author" value="{{author}}">
      </div>

      <div class="form-group">
        <label for="body">Body</label>
        <textarea type="text" class="form-control" id="body-input" name="body">{{body}}</textarea>
      </div>

      <div class="buttonDiv">
        <button type="submit" class="btn-submit" value="OK">Submit</button>
      </div>

    </form>

    <br>
    <br>

    <div class="buttonDiv">
       <form action="/articles/{{urlTitle}}?_method=DELETE" method="post" role="form"
      enctype="application/x-www-form-urlencoded">
      <div>Delete Article?</div>
      <button type="submit" class="btn-submit" value="OK">Delete</button>
    </form>

    </div>
  
  </section>

</div>