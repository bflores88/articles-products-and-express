<container class="form-content">

  <section class="new-error-handler">
    <div>
      <h3 class="errorTitle">{{errorTitle}}</h3>
      <p class="errorBody">{{errorBody}}</p>
    </div>
  </section>

  <section class="input-form">

    <form action="/products/{{id}}?_method=PUT" method="post" role="form" enctype="application/x-www-form-urlencoded">
      <h2>Edit Product Form</h2>

      <h2>Product ID: &nbsp;{{id}}</h2>

      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" name="name" placeholder="{{name}}" value="{{name}}">
      </div>

      <div class="form-group">
        <label for="price">Price</label>
        <input type="text" class="form-control" name="price" placeholder="{{price}}" value="{{price}}">
      </div>

      <div class="form-group">
        <label for="inventory">Inventory</label>
        <input type="text" class="form-control" name="inventory" placeholder="{{inventory}}" value="{{inventory}}">
      </div>

      <button type="submit" class="btn-submit" value="OK">Submit</button>

    </form>

    <br>
    <br>

    <form action="/products/{{id}}?_method=DELETE" method="post" role="form"
      enctype="application/x-www-form-urlencoded">
      <div>Delete Product?</div>
      <button type="submit" class="btn-submit" value="OK">Delete</button>
    </form>

  </section>

</container>