
<div class="nav-to-new">
  <a class="add-new" href="/products/new">Add New Product</a>
</div>


<section class="delete-success">
  <h2>{{deleteMessage}}</h2>
</section>

<main class="product-listing">

  {{#each products}}
<div class="all-products">
    <h1>{{name}}</h1>
    <p class="productID">Product ID:&nbsp;<span><a href="/products/{{id}}/edit">{{id}}</a></span></p>
    <p>Price:&nbsp;<span>{{price}}</span></p>
    <p>Inventory:&nbsp;<span>{{inventory}}</span></p>
</div>
{{/each}}

</main>
